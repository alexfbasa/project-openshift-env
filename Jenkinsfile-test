@Library("pipeline-shared-lib") _

node {
    options {
        buildDiscarder(logRotator(numToKeepStr: '1'))
        timestamps()
    }
    properties([
            parameters([
                    choice(choices: ['bullseye', 'buster', 'stretch', 'jessie'], description: 'Select your distro version',
                            name: 'distro'),
            ])
    ])
    stage ('Print Input Params'){
        println "The linux distro selected was: ${distro}"
    }
    stage('Checkout') {
        checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/alexfbasa/project-openshift-env.git']]])
    }
}